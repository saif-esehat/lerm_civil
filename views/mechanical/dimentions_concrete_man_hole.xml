<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="mechanical_dimention_concrete_man_hole_view" model="ir.ui.view">
        <field name="name">mechanical.dimention.concrete.man.hole.form</field>
        <field name="model">mechanical.dimention.concrete.man.hole</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id" invisible="1"/>
                        <field name="sample_id" invisible="1" />
                        <field name="parameter_id"/>
                       
                    </group>
                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <field name="child_lines" nolabel="1" >
                            <tree editable="bottom">
                                <field name='sr_no'/>
                                <field name='length'/>
                                <field name='hight'/>
                                <field name='width'/>
                            </tree>
                           
                    </field> 
             

                    <group>
           
                            <group style="width:35%">
                                <field name='average_length' col="4"/>
                            </group>
                            <group style="width:35%"> 
                                <field name='average_hight' col="4"/>
                            </group>
                            <group style="width:30%">
                         
                                <field name='average_width'  col="4"/>
                            </group>
              
                    </group>
                 
                </sheet>
            </form>
        </field>
    </record>
   


    </data>
</odoo>