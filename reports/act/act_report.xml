			 <div style="padding-top:5px">
				<span t-esc="o.material.test_parameter "/> 
				
			</div>
					
                   <table style="margin-top:30px;">
					<t t-set="i" t-value="0"/>
						<thead>
							<tr>
								<th style="text-align: center;font-weight: bold;">
									<span>
										Sr. No
									</span>
								</th>
								<th style="text-align: center;font-weight: bold;">
									<span>
										ID MARK/ Location
									</span>
								</th>
								<th style="text-align: center;font-weight: bold;">
									<span>
										Length in mm
									</span>
								</th>
								<th style="text-align: center;font-weight: bold;">
									<span>
										Width in mm
									</span>
								</th>
								<th style="text-align: center;font-weight: bold;">
									<span>
										Area in mm2
									</span>
								</th>
								
								
								<th style="text-align: center;font-weight: bold;">
									<span>
										Weight of Sample in kgs
									</span>
								</th>
								<th style="text-align: center;font-weight: bold;">
									<span>
										Crushing Load in kN

									</span>
								</th>
								<th>
									<span>
										Compressive Strength in N/mm2

									</span>
								</th>
                              
							
							</tr>
						</thead>
						<tbody >
						<t t-set="i" t-value="0"/>
                        	 <t t-foreach="data.child_lines" t-as="line">
									<tr>
										<td style="text-align: center;">
											<div>
												<span t-esc="i + 1" />
												<t t-set="i" t-value="i+1"/>
											</div>
										</td>
										<td style="text-align: center;">
											<span t-esc="line.id_mark"/>
										</td>
										<td style="text-align: center;">
											<span t-esc="line.length" t-options='{"widget": "float", "precision": 2}'/>
										</td>
										<td style="text-align: center;">
											<span t-esc="line.width" t-options='{"widget": "float", "precision": 2}'/>
										</td>
										<td style="text-align: center;">
											<span t-esc="line.area" t-options='{"widget": "float", "precision": 2}'/>
										</td>
									
										<td style="text-align: center;">
											<span t-esc="line.weight_sample" t-options='{"widget": "float", "precision": 3}'/>
										</td>
										<td style="text-align: center;">
											<span t-esc="line.crushing_load" t-options='{"widget": "float", "precision": 1}'/>
										</td>
										<td style="text-align: center;">
											<span t-esc="line.compressive_strength" t-options='{"widget": "float", "precision": 2}'/>
										</td>
										
										
										
									</tr>
										
									
								</t>
									


							
						</tbody>
					</table>
					<div style="margin-top:10px">
